  <section id="hackerman" class="mb-12">
    <div class="hacker-wrap">
      <div id="hackerTerminal" class="hacker-terminal" aria-live="polite" aria-atomic="false"></div>
  </section>

  <!-- Inline script controlling typing and scroll-lock -->
  <script is:inline>
  (function () {
    const LINES = [
      "initializing... modules: core, net, ui",
      "code(and coffee)-fueled mode engaged",
      "payload: stealth-deploy v0.9",
      "debug: patching memory leaks",
      "Autism to the core — build sequence active",
      "hooking into websockets...",
      "compiling... done",
      "deploy: /prod -> success"
    ];

    const terminal = document.getElementById("hackerTerminal");
    if (!terminal) return;

    let started = false;
    let lineIdx = 0;
    let charIdx = 0;
    let timerId = null;
    let caret = null;

    function makeLine() {
      const el = document.createElement("div");
      el.className = "hacker-line visible";
      const content = document.createElement("span");
      content.className = "hacker-content";
      el.appendChild(content);
      return el;
    }
    function contentEl() {
      const last = terminal.lastElementChild;
      return last ? last.querySelector(".hacker-content") : null;
    }
    function ensureCaret(onEl) {
      if (caret && caret.parentElement) caret.remove();
      caret = document.createElement("span");
      caret.className = "hacker-caret";
      onEl.appendChild(caret);
    }
    function rmCaret() {
      if (caret && caret.parentElement) caret.remove();
      caret = null;
    }
    function clearTimer(){ if (timerId) { clearTimeout(timerId); timerId = null; } }

    function stepType() {
      const reduced = window.matchMedia("(prefers-reduced-motion: reduce)").matches;

      if (lineIdx >= LINES.length) { rmCaret(); clearTimer(); return; }

      // ✅ Always create a fresh line at the start of each block
      if (charIdx === 0) {
        const lineEl = makeLine();
        terminal.appendChild(lineEl);
      }

      const line = LINES[lineIdx];
      const el = contentEl();

      if (reduced) {
        el.textContent = line;
        lineIdx++; charIdx = 0;
        timerId = setTimeout(stepType, 250);
        return;
      }

      // type next char
      const ch = line.charAt(charIdx++);
      const span = document.createElement("span");
      span.textContent = ch;
      span.className = "hacker-pop";
      el.appendChild(span);

      ensureCaret(terminal.lastElementChild);
      terminal.scrollTop = terminal.scrollHeight;

      if (charIdx < line.length) {
        const delay = 16 + Math.random() * 8; // ~16–24ms
        timerId = setTimeout(stepType, delay);
      } else {
        // move to next line after a brief pause
        charIdx = 0;
        lineIdx++;
        rmCaret();
        timerId = setTimeout(stepType, 260);
      }
    }

    function startTyping() {
      if (started) return;
      started = true;
      stepType();
    }

    // Start when terminal first enters view, or first downward wheel over it.
    const io = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        if (e.isIntersecting) { startTyping(); io.disconnect(); }
      });
    }, { threshold: 0.35 });
    io.observe(terminal);

    function onWheel(e) {
      const r = terminal.getBoundingClientRect();
      const inWidget = e.clientY >= r.top && e.clientY <= r.bottom;
      if (!started && inWidget && e.deltaY > 8) startTyping();
    }
    window.addEventListener("wheel", onWheel, { passive: true });
  })();
  </script>




